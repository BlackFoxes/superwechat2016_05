<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical" >
    <include
        android:id="@+id/ll_title"
        layout="@layout/view_layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_txt_username"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:textSize="20sp"
            android:paddingLeft="120dp"
            android:singleLine="true"
            android:maxLength="11"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_login_username"
            android:text="@string/register_user_name"
            android:textColor="@color/text_hint"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_password"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:textSize="20sp"
            android:paddingLeft="120dp"
            android:singleLine="true"
            android:maxLength="11"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_cof_password"
            android:text="@string/register_password"
            android:textColor="@color/text_hint"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:background="@color/login_bg"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:text="@string/login_btn_action"
        android:textColor="@color/white"
        android:onClick="login"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/login_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_txt_qustion"
        android:textColor="@color/blue"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="10dp"

        />

    
    <Button
        android:id="@+id/btn_register"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_btn_register"


        />
</LinearLayout>