<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical" >

    <include
        android:id="@+id/ll_title"
        layout="@layout/view_layout_title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_user_name"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:textSize="20sp"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:maxLength="11"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_username"
            android:text="@string/register_user_name"
            android:textColor="@color/text_hint"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_nick_name"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:textSize="20sp"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:maxLength="11"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_nickname"
            android:text="@string/nick_name"
            android:textColor="@color/text_hint"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_password"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:textSize="20sp"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:maxLength="11"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_password"
            android:text="@string/register_password"
            android:textColor="@color/text_hint"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_cof_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_your_password"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:textSize="20sp"
            android:paddingLeft="120dp"
            android:singleLine="true"
            android:maxLength="11"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_cof_password"
            android:text="@string/confirm_your_password"
            android:textColor="@color/text_hint"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:background="@color/login_bg"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:text="@string/register"
        android:onClick="register"
        android:layout_height="wrap_content" />
</LinearLayout>